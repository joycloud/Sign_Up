<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 應用程式</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://cdn.staticfile.org/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.staticfile.org/popper.js/1.15.0/umd/popper.min.js"></script>
    <script src="https://cdn.staticfile.org/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>

@{
    var account = "";

    if (Session["account"] == null || string.IsNullOrWhiteSpace(Session["account"].ToString()))
    {
    }
    else
    {
        account = Session["account"].ToString();
    }
}
<body>
    <p></p>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <button class="navbar-toggler" data-toggle="collapse" data-target="#layoutNavbarSupportedContent"
                aria-controls="layoutNavbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="layoutNavbarSupportedContent">
            <ul class="nav navbar-nav">
                <li class="nav-item">@Html.ActionLink("首頁", "Index", "Account", new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("關於", "About", "Account", new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("連絡人", "Contact", "Account", new { @class = "nav-link" })</li>
            </ul>
            <partial name="_LoginPartial" />
        </div>

        <div class="account"  style="width:100px;">
            <ul class="navbar-nav">
                <li class="dropdown ">
                    <a href="#" class="dropdown-toggle h6" data-toggle="dropdown" aria-haspopup="true"
                       aria-expanded="false" style="color:white;" data-target="#drop">
                        @account
                    </a>
                    <div id="drop" class="dropdown-menu" style="width:2px;">
                        <a class="dropdown-item" href="profile.html">LogOff</a>
                    </div>
                </li>
            </ul>
        </div>
        @*<h4 id="Session" style="text-align: right; color:#DDDDDD">@account</h4>*@ 
    </nav>

    


    @*<nav class="navbar navbar-expand-lg navbar-expand-md">
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle h6" data-toggle="dropdown" aria-haspopup="true"
                           aria-expanded="false" style="color: black;" data-target="#drop">
                            管理者
                        </a>
                        <div id="drop" class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="profile.html">Profile</a>
                            <a class="dropdown-item" href="login.html">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>*@

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 應用程式</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
